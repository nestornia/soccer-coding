<resources>

    <style name="Widget.MaterialComponents.TextView.CompetitionName">
        <item name="android:textAppearance">?textAppearanceHeadline3</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.LocationAndDate">
        <item name="android:textAppearance">?textAppearanceBody2</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.TeamScore">
        <item name="android:textAppearance">?textAppearanceHeadline2</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.TeamName">
        <item name="android:textAppearance">?textAppearanceHeadline5</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DateNum">
        <item name="android:textAppearance">?textAppearanceHeadline1</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.DateDayShort">
        <item name="android:textAppearance">?textAppearanceHeadline4</item>
        <item name="android:textColor">@color/blue</item>
    </style>

